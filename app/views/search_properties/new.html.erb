<h1>New Search Property</h1>

<%= form_for(@search_property, html: {method: :post}) do |f| %>

  <div class="field">
    <%= f.label 'Address' %><br />
    <%= f.text_field :address, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label 'Property Size' %><br />
    <%= f.select :size, options_for_select(%w['100-200', '200-300', '300-400', '400-500', '500+']), :include_blank => true %>
  </div>

  <div class="field">
    <%= f.label 'Property Price' %><br />
    <%= f.select :price, options_for_select(%w['1000-2000', '2000-3000', '3000-4000', '4000-5000', '5000+']), :include_blank => true %>
  </div>

  <div class="actions">
    <%= f.submit "Search" %>
  </div>
<% end %>

<%= link_to 'Back', search_properties_path %>
