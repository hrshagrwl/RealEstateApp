<p id="notice"><%= notice %></p>

<h1>Property Search Results</h1>

<% if @search_property.search_properties.empty? %>
  <p>No Properties Found</p>
<% else %>
  <table class = "table table-bordered table-striped">
    <thead>
    <tr>
      <th>Address</th>
      <th>Size</th>
      <th>Price</th>
      <th>Floors</th>
      <th>Style</th>
      <th>Owner</th>
      <th>Show</th>
    </tr>
    </thead>

    <tbody>
    <% @search_property.search_properties.each do |p| %>
        <tr>
          <td><%= p.address %></td>
          <td><%= p.size %></td>
          <td><%= p.price %></td>
          <td><%= p.floors %></td>
          <td><%= p.style %></td>
          <td><%= p.owner %></td>
          <td><%= link_to 'Show', p %>
          </td>
          <%= link_to 'Interested', new_potential_buyer_path(@potential_buyer) %>
        </tr>
    <% end %>
    </tbody>
  </table>
<%end%>
<%= link_to 'Edit', edit_search_property_path(@search_property) %> |
<%= link_to 'Back', search_properties_path %>
