<%= form_for :search_params, url: property_search_path do |f| %>
<div class="container" , style="margin-top:50px; margin-bottom:50px;">
  <h2>Search</h2>
  <div class="form-row">
    <div class="form-group col-md-4">
      <%= f.label 'Address' %><br />
      <%= f.text_field :address, autofocus: true, :class=>"form-control" %>
    </div>

    <div class="form-group col-md-4">
      <%= f.label 'Property Size' %><br />
      <%= f.select(:size, size_options, { :include_blank => true }, { :class => "form-control" }) %>
    </div>

    <div class="form-group col-md-4">
      <%= f.label 'Property Price' %><br />
      <%= f.select(:price, price_options, { :include_blank => true }, { :class => "form-control" }) %>
    </div>
    
  </div>
  <div class="form-group">
      <%= f.submit "Search", :class=>"btn btn-success float-right" %>
  </div>
</div>
<% end %>