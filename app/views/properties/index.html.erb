<%= render "partials/navbar" %>
<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Properties</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Pic</th>
        <th>Price</th>
        <th>Address</th>
        <th>Size</th>
        <th>Floors</th>
        <th>Contact</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @properties.each do |property| %>
        <tr>
          <td><%= property.image %></td>
          <td><%= property.price %></td>
          <td><%= property.address %></td>
          <td><%= property.size %></td>
          <td><%= property.floors %></td>
          <td><%= User.find(property.realtor_id).first_name%></td>
          <td><%= link_to 'Show', property %></td>
          <td><%= link_to 'Edit', edit_property_path(property) %></td>
          <td><%= link_to 'Destroy', property, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Property', new_property_path %>
</div>
