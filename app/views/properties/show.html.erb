<%= render "partials/navbar" %>
<div class="container" style="margin-top:50px">
  <div class="card" style="width: 64rem;">
    <% if @property.image_url %>
      <%= image_tag @property.image_url, :class=>"card-img-top" %>
    <% end %>
    <div class="card-body">
      <h5 class="card-title">
        <%= @property.address %>
      </h5>
      <p>
        <strong>Address :</strong>
        <%= @property.address %>
      </p>


      <p> <strong>Owner : </strong>
        <%= @property.owner %>
      </p>

      <p>
        <strong>Price :</strong>
        <%= @property.price.to_s %>
      </p>

      <p>
        <strong>Size :</strong>
        <%= @property.size.to_s %>
      </p>

      <p>
        <strong>Floors :</strong>
        <%= @property.floors.to_s %>
      </p>

      <p>
        <strong>Basement :</strong>
        <%= @property.basement.to_s %>
      </p>


      <p>
        <strong>Style :</strong>
        <%= @property.style %>
      </p>

      <p>
        <strong>Company :</strong>
        <% if @property.company_id != nil %>
          <%= Company.find(@property.company_id).name %>
        <% end %>
      </p>
      
      <%= link_to 'Send Query', new_query_path(@query), :class=>"btn btn-success" %>
      <%= link_to 'Interested', potential_buyers_path(property_id: @property.id), :method => 'post', :class=>"btn btn-success" %>
      <%= link_to 'Back', properties_path, :class=>"btn btn-secondary" %>
    </div>
  </div>
</div>